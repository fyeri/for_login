
<h1><%= 'アカウント編集ページ' %></h1>


<%= form_with(model: @user, local: true) do |f| %>

  <%= f.label t('common.name') %>
  <%= f.text_field :name %>
  <%= f.label t('common.email') %>
  <%= f.email_field :email %>
  <%= f.label t('common.password') %>
  <%= f.password_field :password %>
  <%= f.label t('common.password_confirmation') %>
  <%= f.password_field :password_confirmation %>

   <br>
  <%= f.submit t('helpers.submit.update') %>
 
 
<% end %>
<%= link_to t('common.back'), user_path %>

